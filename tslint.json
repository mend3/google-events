{
  "extends": "tslint-config-airbnb",
  "rules": {
    "no-increment-decrement": {
      "severity": "off"
    },
    "function-name": {
      "severity": "off"
    },
    "align": {
      "severity": "off"
    },
    "max-line-length": [true, 140],
    "arrow-parens": false,
    "ter-arrow-parens": false,
    "trailing-comma": true
  }
}
