{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "baseUrl": "src",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es2017",
    "types": ["node","jest"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
